{
  "manifest_version": 2,
  "name": "Songify your pages",
  "version": "1.0",
  "description": "Processes page text and plays audio.",
  "browser_action": {
    "default_icon": {
      "16": "icons/songify.png",
      "32": "icons/songify.png",
      "48": "icons/songify.png"
    },
    "default_title": "Songify Page"
  },
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "songify@mechanisticmind.com",
      "strict_min_version": "50.0"
    }
  }
}
